@import "./mocha.css";

* {
  font-family: "JetBrainsNerd Mono";
  border-radius: 0;
  font-size: 14px;
}

window#waybar {
  background-color: @base;
  color: @text;
}

#workspaces button.active {
  background: @surface0;
  color: @mauve;
  border-bottom: 2px solid @mauve;
}

#clock {
  padding-right: 0.3em;
  padding-left: 0.4em;
}
